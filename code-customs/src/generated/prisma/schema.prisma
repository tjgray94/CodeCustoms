generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inquiry {
  inquiryId   Int    @id @default(autoincrement())
  name        String
  email       String @unique
  phoneNo     String
  description String

  @@map("inquiries")
}

model Project {
  projectId    Int          @id @default(autoincrement())
  businessName String
  businessType BusinessType
  logo         String?
  sketch       String?
  colorScheme  String?
  pageRange    PageRange
  features     String?

  @@map("projects")
}

enum BusinessType {
  Apparel
  CreativePortfolio
  AppointmentBased
  InformationalSite
  CustomIdea
}

enum PageRange {
  OneToThree
  FourToSix
  SevenPlus
}
